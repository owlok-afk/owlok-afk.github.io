---
const posts = await Astro.glob('../pages/posts/*.md');

const blogPosts = posts.map((post: any) => ({
    id: post.url || post.frontmatter.title,
    title: post.frontmatter.title,
    date: post.frontmatter.pubDate,
    description: post.frontmatter.description,
    category: post.frontmatter.category,
    image: post.frontmatter.image?.url || '',
    author: post.frontmatter.author,
    tags: post.frontmatter.tags || [],
    content: post.compiledContent()
})).sort((a: any, b: any) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<section id="blog" class="blog">
    <div class="container">
        <h2>Blog</h2>
        
        <div class="grid">
            {blogPosts.map((post: any) => (
                <article class="post-card">
                    <div class="post-image">
                        <img src={post.image} alt={post.title} />
                        <span class="category">{post.category}</span>
                    </div>
                    <div class="post-content">
                        <time>{new Date(post.date).toLocaleDateString('es-ES', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        })}</time>
                        <div class="post-body" set:html={post.content} />
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>

<style>
    .blog {
        padding: 8rem 0;
        background: #0a0a0a;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    h2 {
        font-size: 3rem;
        font-weight: 800;
        text-align: center;
        margin-bottom: 3rem;
        background: linear-gradient(135deg, #ffffff, #a78bfa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
    }

    .post-card {
        background: rgba(255, 255, 255, 0.03);
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .post-card:hover {
        transform: translateY(-4px);
        border-color: rgba(139, 92, 246, 0.3);
    }

    .post-image {
        position: relative;
        width: 60%;
        height: 200px;
        overflow: hidden;
        border-radius: 12px;
        margin-top: 2rem;
    }

    .post-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .category {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(139, 92, 246, 0.9);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .post-content {
        padding: 2.5rem;
    }

    time {
        color: #8b5cf6;
        font-size: 0.9rem;
        font-weight: 500;
        display: block;
        margin-bottom: 1.5rem;
    }

    .post-body {
        color: #cbd5e1;
        line-height: 1.7;
    }

    .post-body :global(h1) {
        font-size: 2rem;
        font-weight: 700;
        color: #f1f5f9;
        margin-bottom: 1.5rem;
    }

    .post-body :global(h2) {
        font-size: 1.5rem;
        font-weight: 600;
        color: #e2e8f0;
        margin: 2rem 0 1rem;
    }

    .post-body :global(h3) {
        font-size: 1.2rem;
        font-weight: 600;
        color: #e2e8f0;
        margin: 1.5rem 0 0.75rem;
    }

    .post-body :global(p) {
        margin-bottom: 1rem;
        color: #cbd5e1;
    }

    .post-body :global(ul),
    .post-body :global(ol) {
        margin: 1rem 0;
        padding-left: 1.5rem;
    }

    .post-body :global(li) {
        margin-bottom: 0.5rem;
        color: #cbd5e1;
    }

    .post-body :global(strong) {
        color: #c4b5fd;
        font-weight: 600;
    }

    @media (max-width: 768px) {
        .post-image {
            width: 90%;
            height: 180px;
        }

        .post-content {
            padding: 2rem;
        }
    }
</style>