---
// src/pages/blog/[page].astro
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const allPosts = Object.values(import.meta.glob('../../content/*.md', { eager: true }));
  
  // Ordenar posts por fecha (más reciente primero)
  const sortedPosts = allPosts.sort((a: any, b: any) => {
    return new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime();
  });

  const postsPerPage = 3;
  const totalPages = Math.ceil(sortedPosts.length / postsPerPage);

  return Array.from({ length: totalPages }, (_, i) => {
    const pageNumber = i + 1;
    const start = i * postsPerPage;
    const end = start + postsPerPage;
    const pagePosts = sortedPosts.slice(start, end);

    return {
      params: { page: pageNumber.toString() },
      props: { 
        posts: pagePosts,
        currentPage: pageNumber,
        totalPages: totalPages,
        hasPrev: pageNumber > 1,
        hasNext: pageNumber < totalPages
      }
    };
  });
}

const { posts, currentPage, totalPages, hasPrev, hasNext } = Astro.props;
---

<Layout title={`Blog - Página ${currentPage}`}>
  <div class="blog-page">
    <a href="/" class="back">← Volver al inicio</a>
    
    <h1 class="title">Blog</h1>
    <p class="subtitle">Página {currentPage} de {totalPages}</p>

    <div class="posts-grid">
      {posts.map((post: any) => {
        const filename = post.file.split('/').pop()?.replace('.md', '') || '';
        
        return (
          <article class="post-card">
            {post.frontmatter.image?.url && (
              <img 
                src={post.frontmatter.image.url} 
                alt={post.frontmatter.title}
                class="post-image"
              />
            )}
            
            <div class="post-content">
              {post.frontmatter.category && (
                <span class="category">{post.frontmatter.category}</span>
              )}
              
              <h2 class="post-title">{post.frontmatter.title}</h2>
              
              <p class="post-description">{post.frontmatter.description}</p>
              
              <div class="post-meta">
                <time>
                  {new Date(post.frontmatter.pubDate).toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                {post.frontmatter.author && (
                  <span class="author"> • {post.frontmatter.author}</span>
                )}
              </div>
              
              <a href={`/post/${filename}`} class="read-more">
                Leer más →
              </a>
            </div>
          </article>
        );
      })}
    </div>

    <nav class="pagination" aria-label="Paginación del blog">
      {hasPrev && (
        <a href={`/blog/${currentPage - 1}`} class="pagination-btn prev">
          ← Anterior
        </a>
      )}
      
      <div class="pagination-numbers">
        {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
          <a 
            href={`/blog/${page}`}
            class={page === currentPage ? 'page-number active' : 'page-number'}
            aria-current={page === currentPage ? 'page' : undefined}
          >
            {page}
          </a>
        ))}
      </div>
      
      {hasNext && (
        <a href={`/blog/${currentPage + 1}`} class="pagination-btn next">
          Siguiente →
        </a>
      )}
    </nav>
  </div>
</Layout>

<style>
  .blog-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 8rem 2rem 4rem;
    min-height: 100vh;
  }

  .back {
    color: #94a3b8;
    text-decoration: none;
    font-weight: 600;
    display: inline-block;
    margin-bottom: 2rem;
    transition: all 0.3s ease;
    font-size: 1rem;
  }

  .back:hover {
    color: #cbd5e1;
    transform: translateX(-4px);
  }

  .title {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #ffffff, #cbd5e1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }

  .subtitle {
    color: #94a3b8;
    font-size: 1.2rem;
    margin-bottom: 4rem;
    font-weight: 500;
  }

  .posts-grid {
    display: grid;
    gap: 2.5rem;
    margin-bottom: 4rem;
  }

  .post-card {
    background: linear-gradient(135deg, rgba(15, 15, 15, 0.9), rgba(20, 20, 20, 0.8));
    border: 1px solid rgba(148, 163, 184, 0.2);
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    transform: translateY(-8px);
    border-color: rgba(148, 163, 184, 0.5);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
  }

  .post-image {
    width: 100%;
    height: 280px;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .post-card:hover .post-image {
    transform: scale(1.05);
  }

  .post-content {
    padding: 2.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .category {
    background: rgba(148, 163, 184, 0.15);
    border: 1px solid rgba(148, 163, 184, 0.4);
    color: #cbd5e1;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 700;
    display: inline-block;
    margin-bottom: 1.25rem;
    width: fit-content;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .post-title {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 1rem;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .post-card:hover .post-title {
    background: linear-gradient(135deg, #ffffff, #cbd5e1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .post-description {
    color: #94a3b8;
    margin-bottom: 1.5rem;
    line-height: 1.7;
    font-size: 1.05rem;
    flex: 1;
  }

  .post-meta {
    color: #64748b;
    font-size: 0.95rem;
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .author {
    color: #94a3b8;
  }

  .read-more {
    color: #cbd5e1;
    text-decoration: none;
    font-weight: 700;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    font-size: 1rem;
    width: fit-content;
    padding: 0.75rem 1.5rem;
    border: 1px solid rgba(148, 163, 184, 0.3);
    border-radius: 12px;
    background: rgba(148, 163, 184, 0.05);
  }

  .read-more:hover {
    color: #fff;
    transform: translateX(4px);
    border-color: rgba(148, 163, 184, 0.5);
    background: rgba(148, 163, 184, 0.1);
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    margin-top: 5rem;
    flex-wrap: wrap;
  }

  .pagination-btn {
    background: rgba(148, 163, 184, 0.1);
    border: 2px solid rgba(148, 163, 184, 0.3);
    color: #cbd5e1;
    padding: 1rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.3s ease;
    font-size: 1rem;
  }

  .pagination-btn:hover {
    background: rgba(148, 163, 184, 0.2);
    border-color: rgba(148, 163, 184, 0.6);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }

  .pagination-btn:active {
    transform: translateY(0);
  }

  .pagination-numbers {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .page-number {
    min-width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(148, 163, 184, 0.3);
    border-radius: 12px;
    color: #94a3b8;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.3s ease;
    font-size: 1rem;
  }

  .page-number:hover {
    background: rgba(148, 163, 184, 0.1);
    color: #cbd5e1;
    border-color: rgba(148, 163, 184, 0.5);
  }

  .page-number.active {
    background: linear-gradient(135deg, rgba(148, 163, 184, 0.3), rgba(148, 163, 184, 0.2));
    border-color: #94a3b8;
    color: #fff;
    box-shadow: 0 4px 15px rgba(148, 163, 184, 0.3);
  }

  @media (max-width: 768px) {
    .blog-page {
      padding: 6rem 1.5rem 3rem;
    }

    .title {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .post-title {
      font-size: 1.6rem;
    }

    .post-image {
      height: 220px;
    }

    .post-content {
      padding: 2rem;
    }

    .pagination {
      gap: 1rem;
    }

    .pagination-btn {
      padding: 0.75rem 1.5rem;
      font-size: 0.9rem;
    }

    .page-number {
      min-width: 40px;
      height: 40px;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .title {
      font-size: 2rem;
    }

    .pagination {
      flex-direction: column-reverse;
    }

    .pagination-numbers {
      justify-content: center;
    }
  }
</style>

<script>
  // Limpiar el localStorage cuando se navega a una página de blog
  if (typeof window !== 'undefined') {
    localStorage.removeItem('currentSection');
  }
</script>