---
const projects = [
  {
    title: "Sistema de Consultoría en Construcción",
    description:
      "Aplicación con Flask + MySQL para gestionar clientes, contratistas, materiales y más. Autenticación, alertas y panel de administración.",
    image: "/images/projects/consultoria.png",
    tech: ["Flask", "MySQL", "Bootstrap"],    
    code: "https://github.com/tu-repo",
  },
  {
    title: "Sistema de seguimiento de egresados",
    description:
      "Sistema para el seguimiento de alumnos egresados de la UES San José del Rincón.",
    image: "/images/projects/seguimiento_egresados.png",
    tech: ["MySQL", "Flask", "Bootstrap"],
    code: "https://github.com/tu-repo",
  },
  {
    title: "Traslaciones de figuras",
    description:
      "Programa que simula la traslación de figuras bidimensionales de distintos lados en diversos puntos usando Pygame.",
    image: "/images/projects/traslaciones.png",
    tech: ["Python", "PyGame"],
    code: "https://github.com/tu-repo",
  },
];

import "../styles/global.css";
import Navbar from "../components/organisms/Navbar.astro";
---


<!DOCTYPE html>
<html lang="en"
class="bg-white dark:bg-gray-700 text-black dark:text-white">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proyectos</title>
    <script is:inline>
            const saved = localStorage.theme;

            if (
                saved === "dark" ||
                (!saved &&
                    window.matchMedia("(prefers-color-scheme: dark)").matches)
            ) {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }
        </script>
</head>
<body>

<Navbar />
<section id="contact" class="py-24 px-6 max-w-6xl mx-auto text-center">
<section id="projects" class="max-w-7xl mx-auto px-6 py-24">
  <h2 class="text-3xl font-bold text-center mb-14">Proyectos</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    {projects.map((p) => (
      <div
        class="card opacity-0 translate-y-10 transition-all duration-700
               group relative rounded-3xl overflow-hidden shadow-xl 
               bg-white/10 dark:bg-white/5 backdrop-blur border border-white/10 
               hover:shadow-2xl p-0"
      >
        <!-- Imagen -->
        <div class="overflow-hidden relative h-64">
          <img
            src={p.image}
            alt={p.title}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />

          <!-- Overlay degradado -->
          <div
            class="absolute inset-0 bg-linear-to-t from-black/60 to-transparent 
                   opacity-0 group-hover:opacity-100 transition-all duration-500"
          ></div>
        </div>

        <!-- Contenido -->
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">{p.title}</h3>
          <p class="text-sm text-white/80 mb-4">{p.description}</p>

          <!-- Chips -->
          <div class="flex flex-wrap gap-2 mb-6">
            {p.tech.map((t) => (
              <span
                class="px-3 py-1 text-xs rounded-full bg-white/10 border border-white/20 
                       text-white/80"
              >
                {t}
              </span>
            ))}
          </div>

          <!-- Botones -->
          <div class="flex gap-4">
            
            <a
              href={p.code}
              target="_blank"
              class="px-4 py-2 rounded-lg bg-blue-500/30 border border-gray-400/40 hover:bg-blue-500/50 transition"
            >
              Código
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Script para animación al aparecer -->
  <script>
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("opacity-100", "translate-y-0");
            entry.target.classList.remove("opacity-0", "translate-y-10");
          }
        });
      },
      { threshold: 0.2 }
    );

    document.querySelectorAll(".card").forEach((card) => observer.observe(card));
  </script>
</section>
</section>
    
</body>
</html>